{
	"codeLens.enable": true,
	"java.referencesCodeLens.enabled": true,
	"java.jdt.ls.vmargs": "-javaagent:/usr/local/share/lombok/lombok.jar",
	"java.enabled": true,
	"java.configuration.runtimes": [
		{
			"name": "JavaSE-11",
			"path": "/usr/lib/jvm/java-11-openjdk",
			"default": true
		},
		{
			"name": "JavaSE-1.8",
			"path": "/usr/lib/jvm/java-8-jdk"
		}
	],
	"html.validate.html": true,
	"bootstrap-classname.filetypes": [
		"html",
		"php"
	],
	"coc.preferences.formatOnSaveFiletypes": [
		"html",
		"css",
		"markdown",
		"python"
	],
	"emmet.includeLanguages": {"php": "html"},
	"suggest.noselect": false,
	"prettier.tabWidth": 2,
	"prettier.useTabs": false,
	"languageserver": {
		"ccls": {
			"command": "ccls",
			"filetypes": ["c", "cpp", "cuda", "objc", "objcpp", "arduino", "ino"],
			"rootPatterns": [".ccls-root", "compile_commands.json"],
			"initializationOptions": {
				"cache": {
					"directory": ".ccls-cache"
				},
				"client": {
					"snippetSupport": true
				}
			}
		}
	},
	"omnisharp.trace.server": "information",
	"python.linting.enabled": true,
	"snippets.userSnippetsDirectory": "$HOME/.config/nvim/snippets",
	"python.pythonPath": "python"
}

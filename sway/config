# start a terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec rofi -show drun -show-icons

#Capturas de pantalla
bindsym --release Print exec "grim ~/Imágenes/$(date +'Captura-%d-%m-%y_%s.png') && notify-send 'Captura realizada con éxito'" 
bindsym --release Shift+Print exec "slurp | grim -g - ~/Imágenes/$(date +'Captura-%d-%m-%y_%s.png') && notify-send 'Captura realizada con éxito'"

exec_always {
	gsettings set $gnome-schema gtk-theme 'Juno-ocean'
	gsettings set $gnome-schema cursor-theme 'Vimix-white-cursors'
	gsettings set $gnome-schema icon-theme 'Papirus-Dark'
}


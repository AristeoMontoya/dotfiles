set	$urgente 		#E53935
set $contorno 		#434957

#Colores de ventanas 	Bordes 		Fondo 		Texto 			Indicador 	Borde-hijo
client.focused			$contorno	$contorno	$contorno		$contorno	$contorno
client.unfocused		$bg-color	$bg-color 	$bg-color 		$bg-color 	$bg-color
client.focused_inactive	$bg-color	$bg-color	$bg-color		$bg-color 	$bg-color
client.urgent			$urgente	$urgente	$texto			$bg-color 	$bg-color

